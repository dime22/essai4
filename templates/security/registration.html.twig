{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}


    <h1>inscription sur le site</h1>
    {{ form_start(form) }}

    {{ form_row(form.username,{'label':'Nom d\'utilisateur','attr':{'placeholder' : 'username...'}} )}}
    {{ form_row(form.email,{'label':'Adresse email','attr':{'placeholder': 'email...'}})}}
    {{ form_row(form.password,{'label':'mot de passe','attr':{'placeholder': 'Entrez le mot de passe'}})}}
    {{ form_row(form.confirm_password,{'label':'confirmation du mot de passe','attr':{'placeholder': 'répéter le mot de passe ici'}})}}
    <button type="submit" class="btn btn-success">inscription!</button>
    {{ form_end(form) }}


{% endblock %}
